# Initialise Tkinter
from tkinter import *
from tkinter import ttk
from tkcalendar import *


# Window dimensions
root = Tk()
root.geometry('1000x500')
root.resizable(False, False)


# Tab control
tabControl = ttk.Notebook(root)

tab1 = ttk.Frame(tabControl)
tabControl.add(tab1, text="Tab 1")
tabControl.pack(expand=1, fill="both")

tab2 = ttk.Frame(tabControl)
tabControl.add(tab2, text="Tab 2")
tabControl.pack(expand=1, fill="both")

tab3 = ttk.Frame(tabControl)
tabControl.add(tab3, text="Tab 3")
tabControl.pack(expand=1, fill="both")


# Variables


# Creating the date column
calendar = Label(tab1,text='Calendar',font=('Courier', 20,'bold'),fg='black')
calendar.place(x=300, y=200)

calen = DateEntry(tab1, dateformat=3, width=12, background='Black', foreground='white', borderwidth=4, Calendar=2020)
calen.place(x=300, y=250)


# Running Mainloop
root.mainloop()
