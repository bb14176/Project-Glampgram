# Initialise Tkinter
from tkinter import *
from tkinter import ttk
import calendar


# Window dimensions
root = Tk()
root.geometry('1000x500')


# Tab control
tabControl = ttk.Notebook(root)

tab1 = ttk.Frame(tabControl)
tabControl.add(tab1, text="Tab 1")
tabControl.pack(expand=1, fill="both")

tab2 = ttk.Frame(tabControl)
tabControl.add(tab2, text="Tab 2")
tabControl.pack(expand=1, fill="both")

tab3 = ttk.Frame(tabControl)
tabControl.add(tab3, text="Tab 3")
tabControl.pack(expand=1, fill="both")


# Variables
monthnum = 1
yearnum = 2020


# Quit function
def calchange():
    global b1
    global monthnum
    global yearnum
    if monthnum != 12:
        monthnum = monthnum + 1
        b1.destroy()
        b1 = Button(tab1, text=calendar.month(yearnum, monthnum), command=calchange, height=10, width=20, bg='yellow')
        b1.place(x=200, y=100)
        if monthnum == 12:
            monthnum = 0
            yearnum = yearnum + 1


# Button example
b1 = Button(tab1, text=calendar.month(yearnum, monthnum), command=calchange, height=10, width=20, bg='yellow')
b1.place(x=200, y=100)


# Running Mainloop
root.mainloop()
